        <script type="text/javascript">
            function myFunction(){
                var a=document.getElementById("bookval").value;
                var c;
                var d;
                if(document.getElementById("ju").checked){
                     c=400;
                    if(a<=250){
                        d=0.05;
                    }
                    else if(a>250){
                     d=0.07;
                    }
                }
                else if(document.getElementById("ji").checked){
                 c=300;
                    if(a<=250){
                        d=0.03;
                    }
                    else if(a>250){
                     d=0.04;
                    }
                }
                var e=a*c-d*a*c; 
                document.getElementById("result").innerHTML="Total Price is:"+e;
            }
        </script>
