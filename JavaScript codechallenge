                <td><input type="radio" id="ju" value="Science" name="bookCategory" required>Science
                <input type="radio" id="ji" value="Comics" name="bookCategory">Comics</td>
            </tr>
            <tr><td>Type</td>
            <td><datalist id="bookTypes">
                <option value="Weekly"></option>
                <option value="Monthly"></option>
                <option value="Fortnightly"></option>
            </datalist>
            <input list="bookTypes" required name="bookType"></td>
            </tr>
            <tr>
                <td>No of Books Required</td>
                <td><input type="range" required min="1" max="500" value="1" name="bookCount" id="bookval" ></td>
            </tr>
            <tr><td>
                <input type="submit" name="submit" onclick="myFunction()" value="Calculate Total Price">
            </td><td><input type="reset" name="reset" value="Reset"></td></tr>
        </table>
        <div id="result"></div>
            <table id="discounttable">
                <caption>Discount Rate Chart</caption>
